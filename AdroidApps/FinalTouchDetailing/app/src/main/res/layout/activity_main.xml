<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentStart="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="442dp"
        android:layout_height="match_parent"
        android:maxWidth="60dp"
        android:padding="60dp"
        android:src="@drawable/car" />
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <TableRow>
            <View android:layout_height="150dp" />
            <RadioGroup
                android:paddingTop="100dp"
                >

                <CheckBox
                    android:id="@+id/radBasic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wash"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/radVac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/washclean"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/radDeluxe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deluxe"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/radRestore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/restore"
                    android:textSize="20sp" />
            </RadioGroup>
        </TableRow>

        <TableRow>
            <View android:layout_height="20dp"/>

            <Button
                android:layout_marginTop="100dp"
                android:layout_marginStart="50dp"
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/schedule"
                android:textSize="36sp" />
        </TableRow>
        <TableRow>
            <View android:layout_height="40dp" />

            <TextView
                android:id="@+id/txtreservation"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="10dp"
                android:text=""
                android:textColor="#009688"
                android:textSize="30sp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow>
            <View android:layout_height="40dp" />

            <TextView  android:id="@+id/txtcost"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="10dp"
                android:text=""
                android:textColor="#009688"
                android:textSize="30sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>
</LinearLayout>